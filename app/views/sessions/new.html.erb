<div class="sessions-new-wrapper">
 <div class="container">
  <div class="row">
   <div class="form-wrapper col-md-offset-4 col-md-4">
     <%= form_for :session, url: login_path do |f| %>
     <div class="form-group">
       <%= f.label :email, class:'text-white'%>
       <%= f.email_field :email, class:'form-control' %>
     </div>  
     <div class="form-group">
       <%= f.label :password, class:'text-white' %>
       <%= link_to "(forget password)", new_password_reset_path, class:'text-white' %>
       <%= f.password_field :password, class:'form-control' %>
     </div> 
       <%= f.label :remember_me, class: "checkbox-inline" do %>
          <%= f.check_box :remember_me %>
          <span class="text-white">Remember me on this computer</span>
       <% end %>
     
       <%= f.submit "Log in", class: 'btn btn-white btn-block' %>
       <% end %>
     
       <p class="text-white">new user?</p>
       <%= link_to "users/new" do %>
         <p class="text-white"> Sign up</p>
       <% end %>
   </div>
  </div>
 </div>
</div>
