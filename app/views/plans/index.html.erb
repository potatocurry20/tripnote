<div class="post-index-wrapper">
  <div class="container-fluid">
    <h1 class="text-center">Plans</h1>
    <%= link_to new_plan_path do %>
      <p class="text-center">Create Plan</p>
    <% end %>
    <% @plans.each do |plan| %>
      <div class="box">
          <div class="post-index-single">
            <h2 class="post-title">
              <%= plan.plan_title %>
            </h2>
            <%= link_to plan_destinations_path(plan_id: plan.id) do %>
             <%= image_tag plan.image.url, size: '320x240' %>
            <% end %>
          </div>
      </div>
    <% end %>
  </div>
</div>