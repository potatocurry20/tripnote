<div class="post-index-wrapper">
  <div class="container-fluid">
    <h1 class="text-center">Plans</h1>
    <%= link_to new_plan_path do %>
      <p class="text-center">Create Plan</p>
    <% end %>
    <% @plans.each do |plan| %>
      <div class="box">
        <div class="post-index-single">
          <h2 class="post-title">
            <%= plan.plan_title %>
          </h2>
          <% if plan.image.url %>
            <%= link_to plan_destinations_path(plan_id: plan.id) do %>
              <%= image_tag plan.image.url, size: '320x240' %>
            <% end %>
          <% else %>
            <%= link_to plan_destinations_path(plan_id: plan.id) do %>
              <%= image_tag "default_trip.jpeg" , size: '320x240' %>
            <% end %>
          <% end %>
          <h3>
            <%= link_to "edit", edit_plan_path(id: plan.id) %>
          </h3>
          <h3>
            <%= link_to "delete", plan, method: :delete %>
          </h3>
        </div>
      </div>
    <% end %>
  </div>
</div>