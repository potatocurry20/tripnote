<div class="plan-new-wrapper" >
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Register Visted Place</h1>
        <%= form_for(@plan_destination, url: {controller: 'plan_destinations', action: 'place_create' }) do |f| %>
          <div class="form-group">
            <%= f.label :destination_title %>
            <%= f.text_field :destination_title, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :image %>
            <%= f.file_field :image%>
          </div>
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: 'form-control' %>
            <%= f.hidden_field :plan_id, value: @plan_id  %>
          </div>
          <%= f.submit '登録', class: 'btn btn-black btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

