<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container-fluid">
    <% if logged_in? %>
        <%= link_to("TRIP NOTE", "/users/#{current_user.id}", id:"logo") %>
      <% else %>
        <%= link_to("TRIP NOTE", "/", id:"logo") %>
      <% end %>
      <nav>
        <ul class="nav navbar-nav">
          <% if logged_in? %>
            <% if current_user.image.url %>
              <%= link_to "/users/#{current_user.id}" do %>
              <a><%= image_tag current_user.image.url %></a>
              <% end %>
            <% else %>
              <%= link_to "/users/#{current_user.id}" do %>
              <a><%= image_tag "default.jpeg" %></a>
              <% end %>
            <% end %>
          <% end %>
        </ul>
      </nav>
      <nav>
        <ul class="nav navbar-nav navbar-right">
         <% if logged_in? %>
           <li><%= link_to("users",users_path) %></li>
           <li><%= link_to("To Visit", plans_path) %></li>
           <li><%= link_to("Visited", "/visited/index") %></li>
           <li><%= link_to "logout",logout_path, method: :delete %></li>
         <% else %>
           <li><%= link_to("home", "/") %></li>
           <li><%= link_to("about","#") %></li>
           <li><%= link_to("login",login_path) %></li>
         <% end %>
        </ul>
      </nav>
  </div>
</header>